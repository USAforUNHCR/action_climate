$title-bold: 'Oswald', sans-serif;
$body-text: 'Cabin', sans-serif;

// breakpoints
$large: 1200px;
$tablet: 900px;
$phone:  540px;

#top-headline{
  position: relative;
  height: 50vh;
  background-color: darkblue;
  font-size: 48pt;
  color: white;
  background-color: none;
  background-image: url(<%= asset_path "../images/syria.jpg" %>);
  background-attachment: fixed;
  & h1{
    padding: 5%;
    font-family: $title-bold;
    font-weight: 700;
    position:absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    margin-right: -50%;
  }
  @media screen and (max-width: $large){
    font-size: 36pt;
  }
  @media screen and (max-width: $tablet){
    font-size: 32pt;
  }
  @media screen and (max-width: $phone){
    font-size: 26pt;
  }
}

#intro-text{
  // height: 17vh;
  color: white;
  font-size: 28pt;
  text-align: center;
  background-color: black;
  font-family: $body-text;
  padding: 7% 10vw 7% 10vw;
  // padding-left: 10vw;
  // padding-right: 10vw;
  & p{
    max-width: 970px;
    margin: auto;
  }
  @media screen and (max-width: $tablet){
    font-size: 20pt;
  }
  @media screen and (max-width: $phone){
    font-size: 14pt;
  }
}

.video-wrapper{
  position: relative;
  padding-bottom: 56.25%; /* 16:9 */
  padding-top: 25px;
  height: 0;
  & iframe{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}

