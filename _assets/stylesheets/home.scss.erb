$title-bold: 'Oswald', sans-serif;
$body-text: 'Cabin', sans-serif;

// breakpoints
$large: 1200px;
$tablet: 900px;
$phone:  540px;

#top-headline{
  position: relative;
  height: 50vh;
  background-color: darkblue;
  font-size: 48pt;
  color: white;
  background-color: none;
  background-image: url(<%= asset_path "../images/syria.jpg" %>);
  background-attachment: fixed;
  & h1{
    padding: 5%;
    font-family: $title-bold;
    font-weight: 700;
    position:absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    margin-right: -50%;
  }
  @media screen and (max-width: $large){
    font-size: 36pt;
  }
  @media screen and (max-width: $tablet){
    font-size: 32pt;
  }
  @media screen and (max-width: $phone){
    font-size: 26pt;
  }
}

#intro-text{
  // height: 17vh;
  color: white;
  font-size: 28pt;
  text-align: center;
  background-color: black;
  font-family: $body-text;
  padding: 7% 10vw 7% 10vw;
  // padding-left: 10vw;
  // padding-right: 10vw;
  & p{
    max-width: 970px;
    margin: auto;
  }
  @media screen and (max-width: $tablet){
    font-size: 20pt;
  }
  @media screen and (max-width: $phone){
    font-size: 14pt;
  }
}

#video{
  padding-bottom: 4vh;
  background-color: black;
}

.video-wrapper{
  position: relative;
  padding-bottom: 56.25%; /* 16:9 */
  padding-top: 25px;
  height: 0;
  & iframe{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}

#the-facts{
  // height: 55vh;
  text-align: center;
  font-family: $title-bold;
  font-size: 48pt;
  color: white;
  background-color: #2ed171;
  padding: 5vh 2vw 7vh 2vw;
  letter-spacing: 0.3vw;
  @media screen and (max-width: $tablet){
    font-size: 38pt;
  }
  @media screen and (max-width: $phone){
    font-size: 28pt;
  }
  & a{
    color: white;
    transition: all .2s ease-in-out;
  }
  & a:hover{
    transform: scale(1.1);
    color: #208e4c;
    text-decoration: none;
  }
}

.banner-wrapper{
  padding-top: 4vh;
  max-width: 1080px;
  margin: auto;
}

ul.bxslider{
  margin: 0;
  padding: 0;
}



#act{
  // height: 55vh;
  text-align: center;
  font-family: $title-bold;
  font-size: 48pt;
  color: white;
  background-color: black;
  padding-top: 4vh;
  letter-spacing: 0.2vw;
  padding-bottom: 4vh;
  @media screen and (max-width: $tablet){
    font-size: 38pt;
  }
  @media screen and (max-width: $phone){
    font-size: 28pt;
  }
}

.petition-head{
  padding: 2vh 0 2vh 0;
  font-size: 20pt;
  margin: auto;
  width: 80%;
  background-color: #ffa445;
  border-radius: 20px 20px 0px 0px;
}

.petition-body{
  margin: auto;
  margin-top: -3%;
  font-size: 16pt;
  width: 80%;
  padding: 7% 5% 8% 5%;
  border: solid 3px #ffa445;
  border-radius: 10px;
  box-sizing: border-box;
}

.petition-lower{
  font-size: 16pt;
  margin: auto;
  width: 80%;
  box-sizing: border-box;
  padding: 4vh 8vw 4vh 8vw;
  background-color: #a5a5a5;
  margin-top: -5%;
  color: black;
  border-radius: 0 0 20px 20px;
  border-top: 2px solid #d0cfce;
}

#in-the-news{
  height: 55vh;
  text-align: center;
  font-family: $title-bold;
  font-size: 48pt;
  color: white;
  background-color: #28d2ed;
  padding: 4vh 8vw 4vh 8vw;
  letter-spacing: 0.2vw;
  @media screen and (max-width: $tablet){
    font-size: 36pt;
  }
  @media screen and (max-width: $phone){
    font-size: 26pt;
  }
}

.wrapper{
  width: 100%;
  margin: none;
}

.page-content{
  padding: none;
}

.site-footer{
  background-color: black;
  border: black;
}