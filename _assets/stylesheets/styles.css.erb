@charset "UTF-8";

@font-face {
  font-family: "arrows";
  src:url(<%= asset_path "arrows.eot" %>);
  src:url(<%= asset_path "arrows.eot?#iefix" %>) format("embedded-opentype"),
    url('<%= asset_path "arrows.woff" %>') format("woff"),
    url('<%= asset_path "arrows.ttf" %>') format("truetype"),
    url('<%= asset_path "arrows.svg#arrows" %>') format("svg");
  font-weight: normal;
  font-style: normal;

}

[data-icon]:before {
  font-family: "arrows" !important;
  content: attr(data-icon);
  font-style: normal !important;
  font-weight: normal !important;
  font-variant: normal !important;
  text-transform: none !important;
  speak: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

[class^="icon-"]:before,
[class*=" icon-"]:before {
  font-family: "arrows" !important;
  font-style: normal !important;
  font-weight: normal !important;
  font-variant: normal !important;
  text-transform: none !important;
  speak: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-twitter:before {
  content: "e";
}
.icon-facebook:before {
  content: "d";
}
.icon-tumblr:before {
  content: "c";
}